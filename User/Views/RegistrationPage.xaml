<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:User.ViewModels"
             x:Class="User.Views.RegistrationPage"
             Title="RegistrationPage">

    <ContentPage.BindingContext>
        <vm:RegistrationPageViewModel/>
    </ContentPage.BindingContext>
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Name -->
            <Label Text="Name" FontAttributes="Bold"/>
            <Entry Placeholder="Enter name" Text="{Binding Name}" />
            <Label Text="{Binding NameError}" TextColor="Red" FontSize="12"/>

            <!-- Mobile Number -->
            <Label Text="Mobile Number" FontAttributes="Bold"/>
            <Entry Text="{Binding MobileNumber}" Keyboard="Telephone" MaxLength="10"/>
            <Label Text="{Binding MobileError}" TextColor="Red" FontSize="12"/>

            <!-- Email -->
            <Label Text="Email" FontAttributes="Bold"/>
            <Entry Placeholder="Enter email" Keyboard="Email" Text="{Binding Email}" />
            <Label Text="{Binding EmailError}" TextColor="Red" FontSize="12"/>

            <!-- Password -->
            <Label Text="Password" FontAttributes="Bold"/>
            <Entry Placeholder="Enter password" IsPassword="True" Text="{Binding Password}" />
            <Label Text="{Binding PasswordError}" TextColor="Red" FontSize="12"/>

            <!-- Confirm Password -->
            <Label Text="Confirm Password" FontAttributes="Bold"/>
            <Entry Placeholder="Confirm password" IsPassword="True" Text="{Binding ConfirmPassword}" />
            <Label Text="{Binding ConfirmPasswordError}" TextColor="Red" FontSize="12"/>

            <!-- Profile Photo -->
            <Label Text="Profile Photo" FontAttributes="Bold"/>
            <Image Source="{Binding PhotoPath}" HeightRequest="120" WidthRequest="120" Aspect="AspectFill" />
            <Button Text="ðŸ“‚ Upload Photo" Command="{Binding PickPhotoCommand}" BackgroundColor="#28a745" TextColor="White"/>

            <!-- Register Button -->
            <Button Text="Register" Command="{Binding RegisterCommand}" BackgroundColor="#007bff" TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>