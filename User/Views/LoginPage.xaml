<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:User.ViewModels"
             x:Class="User.Views.LoginPage"
             Title="LoginPage">
    <ContentPage.BindingContext>
        <vm:LoginPageViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label  Text="Welcome to LoginPage" />
            <Label Text="User Name" FontSize="20"  />
            <Entry x:Name="usernameEntry" Placeholder="Username" Text="{Binding Username}"/>
            <Label Text="Password" FontSize="20"/>
            <Entry x:Name="passwordEntry" Placeholder="Password" Text="{Binding Password}" IsPassword="True"/>

            <Label Text="{Binding Message}" TextColor="Red" HorizontalOptions="Center"/>

            <Button Text="Login" Command="{Binding LoginCommand}"/>

            <Button Text="New user? Register here" Command="{Binding GoToRegisterCommand}" TextColor="Blue" FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>